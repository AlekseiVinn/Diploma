@if (Context.User.Identity.Name != null)
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
            <label class="bg-primary rounded-pill bg-opacity-75" style="margin:5px; padding-inline:20px; height: 30px;">
                @Context.User.Identity.Name
            </label>
            <button type="submit" class="btn btn-link navbar-btn navbar-link">Выйти</button>
    </form>
} 
else
{
    <div class="nav navbar-nav navbar-right">
        <div>
        <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Войти</a>
        <a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Registration">Регистрация</a>
        </div>
    </div>
}