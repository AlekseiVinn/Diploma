@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsernameOrEmail" class="control-label"></label>
                <input asp-for="UsernameOrEmail" class="form-control"/>
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HashPass" class="control-label"></label>
                <input asp-for="HashPass" class="form-control" />
                <span asp-validation-for="HashPass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary"/>
            </div>
        </form>

    </div>
</div>
