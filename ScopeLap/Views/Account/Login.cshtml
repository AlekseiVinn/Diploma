@model LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<h1>Вход</h1>

<hr/>

<div class="row">
    <div class="col-md-3">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsernameOrEmail" class="control-label"></label>
                <input asp-for="UsernameOrEmail" class="form-control"/>
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HashPass" class="control-label"></label>
                <input asp-for="HashPass" class="form-control" />
                <span asp-validation-for="HashPass" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary"/>
                <br />
                Ещё не зарегистрированы?
                <br /><a asp-action="Registration" style="text-decoration: underline;">Создать учетную запись.</a>
            </div>
        </form>

    </div>
</div>

