@using ScopeLap.Models.DataBaseEngine;
@model Commentary

@{
    ViewData["Title"] = "Редактирование комментария";
}

<h1>Редактирование</h1>

<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountID" value="@Model.AccountID" />
            <input type="hidden" asp-for="Commented" value="@Model.Commented" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PostId" value="@Model.PostId" />

            <div class="form-group">
                <textarea asp-for="CommentText" rows="5" class="form-control"></textarea>
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
                <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.PostId">Отмена</a>
            </div>
        </form>
    </div>
</div>


